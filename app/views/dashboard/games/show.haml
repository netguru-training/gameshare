.row
  .col-sm-4
    %h3= game.title
    %p
      %b Description:
      = game.description
  .col-lg-8
    = raw video.embed_html5(width: '100%')

.panel.well
  .row
    .col-sm-4
      = link_to 'Add to wishlist', dashboard_game_add_to_wishlist_path(game_id: game.id), method: :post, class: "btn btn-default", disabled: Possession.avaliable(current_user, game, "WishlistItem")
      = link_to 'Add to collection', dashboard_game_add_to_collection_path(game_id: game.id), method: :post, class: "btn btn-default", disabled: Possession.avaliable(current_user, game, "GameCollectionItem")
    .col-lg-8
      Categories:
      - game.categories.each do |c|
        = link_to c.name, search_path(search: { category_id: c }), class: 'label label-primary'

%p#notice= notice
%p#error= flash.now[:error]

